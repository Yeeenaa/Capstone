<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">


<head>
    <%- include('head.ejs') %>
    <title>토론게시판</title>
    <link href="/assets/css/style.css" rel="stylesheet" type="text/css" media="screen" />
</head>

<body>
    <%- include('navigation.ejs') %>
        <div class="writeTable">
            <table id="postTable">
                <caption>토론게시판</caption>
                <tr>
                    <td>제목</td>
                    <td><input type=text name="title" id="title" style="width: 600px;"></td>
                </tr>

                <tr>
                    <td colspan="2" class="ta">
                        <textarea name="container" id="content" cols=180 rows=30 placeholder="욕설 및 비방하는 글은 제한하고 있습니다"
                            onkeyup="checkWord()" onkeydown="checkWord()">
                    </textarea>
                    </td>
                </tr>

                <tr>
                    <td>첨부하기</td>
                    <td><input type="file" multiple="multiple" id="file" name="FileName"></td>
                </tr>
            </table>
            <div id="list-wrap">
                <button id="postButton" value="<%=category%>,AA,<%=token%>">작성</button>
                <a href="/<%=category%>">목록</a>
            </div>
        </div>

        <!-- Scripts -->
        <script type="text/javascript">
            function characterCheck() {
                var RegExp = /[ \{\}\[\]\/?.,;:|\)*~`!^\-_+┼<>@\#$%&\'\"\\\(\=]/gi
                var obj = document.getElementsByName("Txt")[0]
                if (RegExp.test(obj.value)) {
                    alert("특수문자는 입력하실 수 없습니다.");
                    obj.value = obj.value.substring(0, obj.value.length - 1);
                }


            }

            function checkWord() {
                var word = document.getElementById("content").value;

                var swearWordArr = new Array("바보", "멍청이");
                orgword = word.toLowerCase();
                awdrgy = 0;

                while (awdrgy <= swearWordArr.length - 1) {
                    if (orgword.indexOf(swearWordArr[awdrgy]) > -1) {
                        alert(swearWordArr[awdrgy] + "은(는) 입력하실 수 없습니다.");
                        return replace(orgword, "");
                    }

                    awdrgy++;
                }
            }
        </script>

        <%- include('footer.ejs')%>

            <!-- end #footer -->
</body>

</html>