<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>토론게시판</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Xanh+Mono&display=swap" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="/assets/css/board.css" rel="stylesheet" type="text/css" media="screen" />
    <script src="https://kit.fontawesome.com/b4fd1295e3.js" crossorigin="anonymous"></script>
</head>

<body>
    <div id="wrapper">
        <%- include('navigation.ejs') %>
            <%if(user.role==='candidate' ){%>
                <button onclick="location.href= '/pledge/create';">글쓰기</button>
                <%}%>
                    <form action="#" method="GET">
                        <table>
                            <thread>
                                <tr>
                                    <td width="30">학교</td>
                                    <td width="500">제목</td>
                                    <td width="100">작성자</td>
                                    <td width="200">작성일</td>
                                </tr>
                            </thread>
                            <tbody>
                                <%pledges.forEach(pledge=> {%>

                                    <tr>
                                        <td width="100" text-align="center">
                                            <%=pledge.school%>
                                        </td>
                                        <td width="300" text-align="center">
                                            <a href="/pledge/<%=pledge.candidateId%>" style="color: black">
                                                <%=pledge.title%>
                                            </a>
                                        </td>
                                        <td width="100" text-align="center">
                                            <%=pledge.candidate.name%>
                                        </td>
                                        <td width="100" text-align="center">
                                            <%=pledge.createdAt%>
                                        </td>
                                    </tr>

                                    <%})%>
                            </tbody>
                        </table>
                    </form>
                    <hr style="margin:2em;">
                    <div class="container">
                        <form style="margin :auto" , action="#" , method="GET">
                            <select>
                                <option value="title">제목</option>
                                <option value="name">작성자</option>
                            </select>
                            <input type="text" name="search" size="30" required="required">
                            <input type="button" value="검색">
                        </form>
                    </div>
                    
	<%- include('footer.ejs')%>
</body>

</html>